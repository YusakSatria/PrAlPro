print('======= PROGRAM BELANJA =======')
data = input('Masukkan belanja awal : ')
a=data.split(',')
print('DAFTAR BELANJAAN :',a)
print('Pilihlah Menu untuk melakukan perintah : ')
print('1. Menambah Belanjaan')
print('2. Mengurangi Belanjaan')
print('3. Exit')

pilih = int(input('Masukkan pilihan Anda : '))
while pilih!=3:
    if pilih == 1:
        barang=input('Masukkan nama barang : ')
        b=barang.split(',')
        for i in b:
            a.append(i)
        print('Jumlah belanja saat ini',a)
        pilih = int(input('Masukkan pilihan Anda : '))
    elif pilih == 2:
        barang=input('Masukkan nama barang : ')
        b=barang.split(',')
        for i in b:
            a.remove(i)
        print('Jumlah belanja saat ini',a)
        pilih = int(input('Masukkan pilihan Anda : '))

print('Terima kasih telah menggunakan program ini.')
